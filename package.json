{
  "name": "heurist-mcp-installer",
  "version": "1.0.0",
  "description": "CLI tool to install Heurist MCP tools",
  "module": "dist/index.cjs",
  "type": "module",
  "bin": {
    "heurist-mcp-installer": "./dist/index.cjs"
  },
  "scripts": {
    "start": "node dist/index.cjs",
    "build": "tsc && node build.mjs && chmod +x dist/index.cjs",
    "clean": "rm -rf dist",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write --unsafe",
    "format": "biome format --write",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "esbuild": "^0.25.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "enquirer": "^2.4.1",
    "ora": "^8.2.0"
  }
}